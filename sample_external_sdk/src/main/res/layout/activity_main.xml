<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sensetime="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sensetime.sample.CameraTextureView
        android:id="@+id/csv_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sensetime:cameraFacing="back"
        sensetime:resolution="720"
        sensetime:scale="scale_16_9" />

    <SurfaceView
        android:id="@+id/sv_overlap"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="100dp"
        android:text="score:"
        android:textColor="#ff0000"
        android:textSize="28sp" />

</RelativeLayout>
